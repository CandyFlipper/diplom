    <section class="topitems">
        <div class="container topitems__container">
            <p class="topitems__title">Самые популярные товары</p>
            <div class="topitems__items flex flex-row flex-justify-between">
                <% items.forEach(function(item) { %>
                    <div class="topitems__item flex flex-column flex-justify-s">
                        <img src="/static/<%= item.pic[0] %>" alt="" class="topitems__itemimg">
                        <a href="/catalog/<%= item.id %>"><p class="topitems__itemtitle"><%= item.itemname %></p></a>
                        <div class="topitems__buttonandprice flex flex-justify-between flex-row">
                            <div class="topitems__itembutton">
                                <a href="#" class="topitems__itemlink cartLink" data-item="<%= JSON.stringify(item) %>"><img src="../../static/img/cart.png" alt="" class="topitems__buttonimg"></a>
                            </div>
                            <p class="topitems__price"><%= item.price %> руб.</p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
